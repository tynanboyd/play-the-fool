{#
/**
* Block Name: Lightbox Gallery
*
* This template renders a gallery with a Swipebox lightbox
**/
#}

{% extends 'templates/template-parts/blocks/base-block.twig' %}

{% block blockContent %}

  <section class="slider-gallery component">
    <div class="container">

      <div class="slider-gallery__wrapper">
        {% for image in fields.gallery %}

          <a
            class="swipebox slider-gallery__item"
            href="{{ TimberImage(image.sizes.large|resize(720,480)) }}"
            title="My caption"
            >
              <img class="slider-gallery__thumbnail" src="{{ TimberImage(image.sizes.medium|resize(300, 200)) }}" alt="{{ image.alt }}">
            </figure>
          </a>

        {% endfor %}
      </div>

    </div>
  </section>

{% endblock %}
